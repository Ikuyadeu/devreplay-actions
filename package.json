{
  "name": "devreplay-action",
  "version": "0.0.1",
  "private": true,
  "description": "DevReplay action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/devreplay-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "DevReplay",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "devreplay": "^1.3.1"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@zeit/ncc": "^0.21.1",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^24.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^25.5.2",
    "jest-circus": "^25.5.2",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  }
}
